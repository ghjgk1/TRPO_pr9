<Page x:Class="TRPO_pr9.EditPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TRPO_pr9"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="EditPage">
    <Grid DataContext="{Binding UpdatedPatient}" Style="{StaticResource EditPageGrid}">

        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        

        <Label Content="Фамилия"/>
        <TextBox Text="{Binding Path=LastName, Mode=TwoWay}" Grid.Column="1" />

        <Label Grid.Row="1" Content="Имя"/>
        <TextBox Text="{Binding Path=Name, Mode=TwoWay}" Grid.Row="1" Grid.Column="1"/>

        <Label Grid.Row="2" Content="Отчество"/>
        <TextBox Text="{Binding Path=MiddleName, Mode=TwoWay}" Grid.Row="2" Grid.Column="1"/>

        <Label Grid.Row="3" Content="Дата рождения"/>
        <DatePicker Text="{Binding Path=Birthday, Mode=TwoWay}" Grid.Row="3" Grid.Column="1"/>

        <Button Grid.Row="4" Content="Изменить" Click="EditButton_Click"/>
        <Button Grid.Row="4" Grid.Column="1" Content="Сбросить" Click="ResetButton_Click"/>
    </Grid>
</Page>
