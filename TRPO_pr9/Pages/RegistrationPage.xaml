<Page x:Class="TRPO_pr9.RegistrationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TRPO_pr9"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="RegistrationPage">

    <Grid Style="{StaticResource RegistrationPageGrid}" >

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="185"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Label Content="Фамилия"/>
        <TextBox Grid.Column="1" Text="{Binding Path=LastName, Mode=OneWayToSource}"/>

        <Label Grid.Row="1" Content="Имя"/>
        <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding Path=Name, Mode=OneWayToSource}"/>

        <Label Grid.Row="2" Content="Отчество"/>
        <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding Path=MiddleName, Mode=OneWayToSource}"/>

        <Label Grid.Row="3" Content="Специализация"/>
        <TextBox Grid.Row="3" Grid.Column="1" Text="{Binding Path=Specialization, Mode=OneWayToSource}"/>

        <Label Grid.Row="4" Content="Пароль"/>
        <TextBox Grid.Row="4" Grid.Column="1" Text="{Binding Path=Password, Mode=OneWayToSource}"/>

        <StackPanel Grid.Row="5" Grid.ColumnSpan="2" Style="{StaticResource HorizonalStackPanel}">
            <Label Content="Подтверждение пароля"/>
            <TextBox Style="{StaticResource RegistrationPageTextBox}" Text="{Binding Path=Сonfirmation, Mode=OneWayToSource}"/>
        </StackPanel>


        <Button Grid.Row="6" Grid.ColumnSpan="2" Content="Зарегистрироваться" Click="UserRegButton_Click"/>
    </Grid>
</Page>
