<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!--Button-->
    
    <Style TargetType="Button">
        <Setter Property="Background" Value="{DynamicResource ButtonBackground}"/>
        <Setter Property="Foreground" Value="{DynamicResource Text}"/>
        <Setter Property="Padding" Value="0 2"/>
        <Setter Property="Margin" Value="5 0 4 2"/>


        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border 
                        Background="{TemplateBinding Background}"
                        Padding="{TemplateBinding Padding}"
                        Margin ="{TemplateBinding Margin}"
                        CornerRadius="10">
                        <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="{DynamicResource ButtonHover}"/>
            </Trigger>
            <Trigger Property="IsPressed" Value="True">
                <Setter Property="Background" Value="{DynamicResource ButtonPressed}"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <Style TargetType="Button" x:Key="LoginPageButton" BasedOn="{StaticResource {x:Type Button}}">
        <Setter Property="Height" Value="30"/>
    </Style>

    <Style TargetType="Button" x:Key="InspectionPageButton" BasedOn="{StaticResource {x:Type Button}}">
        <Setter Property="Height" Value="36.5"/>
        <Setter Property="Margin" Value="0 3 0 0"/>
    </Style>
    
    <Style TargetType="Button" x:Key="MainPageButton" BasedOn="{StaticResource {x:Type Button}}">
        <Setter Property="Width" Value="150"/>
        <Setter Property="Margin" Value="10 0 0 0"/>
        <Setter Property="Height" Value="45"/>
    </Style>
    <Style TargetType="Button" x:Key="DeleteButton" BasedOn="{StaticResource MainPageButton}">
        <Setter Property="Background" Value="Red"/>
        <Setter Property="Content" Value="🗑️ Удалить"/>
    </Style>

    <Style TargetType="Button" x:Key="AddButton" BasedOn="{StaticResource MainPageButton}">
        <Setter Property="Content" Value="+ Добавить"/>
    </Style>

    <!--Grid-->
    
    <Style TargetType="Grid">
        <Setter Property="Background" Value="{DynamicResource Background}"/>
    </Style>

    <Style TargetType="Grid" x:Key="EditPageGrid" BasedOn="{StaticResource {x:Type Grid}}">
        <Setter Property="Width" Value="293"/>
        <Setter Property="Height" Value="200"/>
    </Style>
    
    <Style TargetType="Grid" x:Key="PatientCreatePageGrid" BasedOn="{StaticResource {x:Type Grid}}">
        <Setter Property="Width" Value="293"/>
        <Setter Property="Height" Value="350"/>
    </Style>
    
    <Style TargetType="Grid" x:Key="RegistrationPageGrid" BasedOn="{StaticResource {x:Type Grid}}">
        <Setter Property="Width" Value="293"/>
        <Setter Property="Height" Value="300"/>
    </Style>

    <Style TargetType="Grid" x:Key="LoginPageGrid" BasedOn="{StaticResource {x:Type Grid}}">
        <Setter Property="Width" Value="285"/>
        <Setter Property="Height" Value="150"/>
    </Style>

    <!--StackPanel-->
    
    <Style TargetType="StackPanel">
        <Setter Property="Margin" Value="7"/>
    </Style>

    <Style TargetType="StackPanel" x:Key="HorizonalStackPanel">
        <Setter Property="Orientation" Value="Horizontal"/>
    </Style>

    <Style TargetType="StackPanel" x:Key="MainPageStackPanel" BasedOn="{StaticResource HorizonalStackPanel}">
        <Setter Property="Margin" Value="10"/>
    </Style>

    <!--TextBlock-->
    
    <Style TargetType="TextBlock">
        <Setter Property="Margin" Value="0 0 0 5"/>
    </Style>

    <!--TextBox-->
    
    <Style TargetType="TextBox" x:Key="InspectionPageTextBox">
        <Setter Property="Height" Value="24"/>
        <Setter Property="Width" Value="277"/>
    </Style>

    <Style TargetType="TextBox">
        <Setter Property="Margin" Value="0 2 4 0"/>
        <Setter Property="Height" Value="30"/>
    </Style>

    <Style TargetType="TextBox" x:Key="RegistrationPageTextBox">
        <Setter Property="Width" Value="140"/>
        <Setter Property="Height" Value="32"/>
    </Style>

    <Style TargetType="TextBox" x:Key="PhoneTextBox" BasedOn="{StaticResource {x:Type TextBox}}">
        <Setter Property="Width" Value="180"/>
        <Setter Property="Margin" Value="0 0 0 7"/>
    </Style>

    <!--ListView-->
    
    <Style TargetType="ListView" >
        <Setter Property="Margin" Value="0 0 5 5"/>
    </Style>

    <!--Label-->
    
    <Style TargetType="Label">
        <Setter Property="Foreground" Value="{DynamicResource Text}"/>
        <Setter Property="Margin" Value="0 -5 0 -5"/>
    </Style>

    <Style TargetType="Label" x:Key="MainPageLabel" BasedOn="{StaticResource {x:Type Label}}">
        <Setter Property="Margin" Value="0 0 0 5"/>
        <Setter Property="FontSize" Value="14"/>
    </Style>
    
    <!--DatePicker-->

    <Style TargetType="DatePicker">
        <Setter Property="Height" Value="47"/>
        <Setter Property="Foreground" Value="{DynamicResource Text}"/>
    </Style>

    <Style TargetType="Menu">
        <Setter Property="Background" Value="{DynamicResource Background}"/>
        <Setter Property="Foreground" Value="{DynamicResource Text}"/>
    </Style>

</ResourceDictionary>